<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Faro.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Faro.PopupOverlay" >

            <ImageView
                android:id="@+id/imageViewSalir"
                android:layout_gravity="right"
                android:layout_width="50dp"
                android:padding="7dp"
                android:src="@drawable/baseline_exit_to_app_24_white"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/imageViewCronometro"
                android:layout_gravity="right"
                android:layout_width="50dp"
                android:padding="7dp"
                android:src="@drawable/baseline_timer_24"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/imageViewFinanza"
                android:layout_gravity="right"
                android:layout_width="50dp"
                android:padding="7dp"
                android:src="@drawable/baseline_monetization_on_24"
                android:layout_height="50dp"/>

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main" />
    >
</androidx.coordinatorlayout.widget.CoordinatorLayout>
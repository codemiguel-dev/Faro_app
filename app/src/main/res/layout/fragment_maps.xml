<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/btnmapssemaforoTil"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                app:hintEnabled="false">

                <!-- Texto en la parte superior -->
                <TextView
                    android:id="@+id/tutorialText"
                    android:layout_width="323dp"
                    android:fontFamily="@font/timesnewroman"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="20dp"
                    android:text="Encuentre semáforos que los usuarios hayan probado para realizar un espectáculo artístico. El mapa mostrará la ubicación de todos los semáforos."
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="197dp"
                    android:layout_height="421dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/semaforomaps"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Texto en la parte superior -->

                <Button
                    android:id="@+id/btnmapssemaforo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/red"
                    android:fontFamily="@font/timesnewroman"
                    android:onClick="formregister"
                    android:text="Semáforos"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tutorialText1"
                    android:layout_width="300dp"
                    android:layout_height="116dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/timesnewroman"
                    android:paddingTop="20dp"
                    android:text="Encuentre a otros usuarios en el mapa que compartan sus habilidades y direcciones de correo electrónico; algunos de ellos se reúnen para entrenar."
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="197dp"
                    android:layout_height="421dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/monociclomaps"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnmapsbufon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnmapssemaforo"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/timesnewroman"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="150dp"
                    android:backgroundTint="@color/yellow"
                    android:onClick="formregister"
                    android:text="Usuarios"
                    android:textColor="@color/white" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/btnmapsbufonTil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false">

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    tools:context=".tuto.tutoMaps">

    <TextView
        android:layout_width="264dp"
        android:layout_height="83dp"
        android:layout_above="@+id/tutorialImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="Selecione mapas para saber su ubicación y registro de semáforos."
        android:textColor="@color/white"
        android:textSize="20sp" />

    <!-- Imagen centrada en la pantalla -->
    <ImageView
        android:id="@+id/tutorialImage"
        android:layout_width="198dp"
        android:layout_height="438dp"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        />

    <!-- Flecha de derecha -->
    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/blackclaro"
        android:layout_centerVertical="true"
        android:src="@drawable/flecha_derecha_verde"
        android:layout_alignParentEnd="true"
        android:contentDescription="Siguiente" />

    <Button
        android:id="@+id/skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Saltar Tutorial" />
</RelativeLayout>